{
  "name": "react-native-text-to-speech",
  "private": true,
  "version": "0.0.0",
  "repository": "https://github.com/patrickkabwe/react-native-text-to-speech.git",
  "author": "Patrick Kabwe",
  "scripts": {
    "bootstrap": "bun --filter=\"**\" install && bun tsc && bun --filter=\"example\" pods",
    "typescript": "bun --filter=\"**\" typescript",
    "release": "release-it"
  },
  "workspaces": [
    "react-native-text-to-speech",
    "example"
  ],
  "devDependencies": {
    "@release-it/conventional-changelog": "^8.0.1",
    "@release-it/bumper": "^6.0.1",
    "@jamesacarr/eslint-formatter-github-actions": "^0.2.0",
    "release-it": "^17.6.0"
  },
  "release-it": {
    "npm": {
      "publish": false
    },
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}",
      "requireCleanWorkingDir": false
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": "feat",
              "section": "‚ú® Features"
            },
            {
              "type": "perf",
              "section": "üí® Performance Improvements"
            },
            {
              "type": "fix",
              "section": "üêõ Bug Fixes"
            },
            {
              "type": "chore(deps)",
              "section": "üõ†Ô∏è Dependency Upgrades"
            },
            {
              "type": "docs",
              "section": "üìö Documentation"
            }
          ]
        }
      }
    }
  }
}